
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var sobj = (AccountPaybleWeb.Manager.ViewModelClass.SearchViewModel)ViewBag.SearchDetail;
}

<style>
    tbody {
        font-size: 11px;
    }

    .table-bordered th {
        text-align: center;
    }

    .table-bordered td {
        text-align: center;
    }

    #errordiv {
        position: relative;
        top: -31px;
    }

    #approvediv {
        position: relative;
        top: -31px;
    }

    #tb1 {
        width: 100%;
        margin: 1px;
        color: #131111eb;
    }

        #tb1 th {
            border: solid;
            text-align: center;
            font-size: 13px;
        }

        #tb1 td {
            border: solid;
            text-align: center;
            font-size: 13px;
        }

    #tblinv1 {
        width: 100%;
        margin: 1px;
        color: #131111eb;
    }

        #tblinv1 th {
            border: solid;
            text-align: right;
            font-size: 13px;
        }

        #tblinv1 td {
            border: solid;
            text-align: center;
            font-size: 13px;
        }

    .tblx thead {
        background: rgb(74, 86, 79);
        color: white;
    }

