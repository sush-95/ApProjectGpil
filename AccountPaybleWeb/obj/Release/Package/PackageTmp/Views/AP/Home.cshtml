            text-align: center;
        }

    .dul {
        border-radius: 5px;
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background: rgb(29,64,45);
        background: linear-gradient(191deg, rgba(29,64,45,0.8239670868347339) 54%, rgba(110,99,86,0.5276391806722689) 97%);
